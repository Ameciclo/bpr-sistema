{
  "name": "bpr-sistema",
  "version": "1.0.0",
  "description": "Sistema completo de monitoramento de bicicletas com WiFi scanning",
  "private": true,
  "workspaces": [
    "bot",
    "web"
  ],
  "scripts": {
    "setup": "./scripts/setup.sh",
    "dev:firmware": "./scripts/dev-firmware.sh",
    "dev:bot": "cd bot && npm run dev",
    "dev:web": "cd web && npm run dev",
    "build:bot": "cd bot && npm run build",
    "build:web": "cd web && npm run build",
    "deploy:all": "./scripts/deploy-all.sh",
    "test": "npm run test --workspaces"
  },
  "keywords": [
    "iot",
    "esp8266",
    "esp32",
    "wifi-scanner",
    "firebase",
    "telegram-bot",
    "remix"
  ],
  "author": "BPR Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}